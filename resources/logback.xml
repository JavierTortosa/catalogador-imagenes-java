<configuration>

    <!-- Appender #1: SOLO PARA ERRORES. Lo mandamos a System.err para que Eclipse lo pinte de ROJO. -->
    <appender name="CONSOLE_ERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <!-- Patrón SIN colores, porque el color lo pone Eclipse al ser System.err -->
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender #2: PARA TODO LO DEMÁS (WARN, INFO, DEBUG). Lo mandamos a System.out. -->
    <appender name="CONSOLE_OUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <!-- Bloqueamos los ERROR para que no se dupliquen -->
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <!-- Aquí usamos highlight, y AHORA SÍ debería funcionar el amarillo para WARN -->
            <pattern>%highlight(%-5level %logger{36} - %msg%n){ERROR=red, WARN=yellow, INFO=green, DEBUG=cyan, TRACE=white}</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE_OUT" /> <!-- Gestiona DEBUG, INFO, WARN -->
        <appender-ref ref="CONSOLE_ERR" /> <!-- Gestiona ERROR -->
    </root>

</configuration>